<apex:page standardController="Building__c">
    <apex:form >
        <apex:pageBlock title="Add Building">
            <apex:pageBlockSection >
                <apex:inputField value="{! Building__c.Name }"/>
                <apex:inputField value="{! Building__c.Address__c }"/>
                <apex:inputField value="{! Building__c.City__c }"/>
                <apex:inputField value="{! Building__c.State__c }"/>
                <apex:inputField value="{! Building__c.Zip__c }"/>
                <apex:commandButton action="{! save }" value="Save" />
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>